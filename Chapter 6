EXERCISE 3

import operator
def calc():
    print("[Calculator]\n"
    "Choose 1 out of 6 to start\n"
    "1. Addition\n"
    "2. Subtraction\n"
    "3. Multiplication\n"
    "4. Division\n"
    "5. Modulus\n"
    "6. Check for the greater number\n"
    "If you want to quit, type [quit] or press [Q].")

while True: 
    try:
        decision = input("Please input your choice: ")
        if decision == "Q" or decision == "quit" or decision == "Quit":
            print("Exiting..")
            break

    decision = int(decision)
    N1=int(input("Enter first digit: "))
    N2=int(input("Enter second digit: "))

    if decision == 1: 
        outcome=operator.add(N1,N2)
    elif decision == 2:
        outcome=operator.sub(N1,N2)
    elif operator == 3:
        outcome==operator.mul(N1,N2)
    elif operator == 4:
        outcome == operator.truediv(N1,N2)
    elif operator == 5:
        outcome == operator.mod(N1,N2)
    elif decision == 6:
        outcome == N1 if N1 > N2 else N2

        print("Output: ", outcome)
except ValueError:
print("Input Invalid!")

calc()

